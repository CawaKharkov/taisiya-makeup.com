{% extends ":layouts:base.html.twig" %}

{% block title %}AppBundle:BlogPost:view{% endblock %}

{% import ":macro:picture_slide.html.twig" as pictures %}
{% import ":macro:blog_posts.html.twig" as blog_posts %}

{% block content %}
    <div class="content-area pvt0">


        <!-- Fashion Box -->
        <div class="section-full pv0 fn-section-box">
            <div class="container">
                <div class="row">
                    <div class="col-sm-12">
                        {{ pictures.bottom([1,2,3]) }}
                    </div>
                </div>
            </div>
        </div>
        <!--// Fashion Box -->

        <div class="section-full pv9 pvb0">
            <div class="container">
                <div class="row sticky-parent fs-with-sidebar fn-with-sidebar">
                    <div class="col-sm-9 sticky-column fs-content">

                        <div class="theiaStickySidebar">

                            <div class="fs-grid-posts">
