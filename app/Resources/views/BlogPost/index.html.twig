                            <div class="widget widget_search">
                                <h5 class="widget-title">Subscribe</h5>
                                <form action="./" class="search_form" method="get">
                                    <input type="text" placeholder="Email address" required="" name="s">
                                    <input type="submit" value="Sign Up">
                                </form>
                            </div>

                            <div class="widget">
                                <h5 class="widget-title">Latest</h5>
                                <div class="fs-recent-post">
                                    <div class="fs-rp-item">
                                        <div class="entry-image">
                                            <!--<a href="single.html"><img src="images/blog/fs-thumb.jpg" alt="recent post"></a>-->
                                            <a href="single.html"><img src="/images/fashion/widget-post.jpg"
                                                                       alt="recent post"></a>
